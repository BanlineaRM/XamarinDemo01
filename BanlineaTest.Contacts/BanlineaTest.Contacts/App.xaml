<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BanlineaTest.Contacts.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="ToolButtonStyle" TargetType="Button">
                <Setter Property="TextColor" Value="Green" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="HeightRequest" Value="40" />
                <Setter Property="HorizontalOptions" Value="End" />
            </Style>

            <Style x:Key="SocialIconStyle" TargetType="Image">
                <Setter Property="WidthRequest" Value="35"></Setter>
                <Setter Property="HeightRequest" Value="35"></Setter>
                <Setter Property="Aspect" Value="AspectFit"></Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>